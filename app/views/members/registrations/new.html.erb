<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><%= t('site.sign_up_legal') %></h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name, role: "form")) do |f| %>
                            <fieldset>
                                <%= f.fields_for :profile_member do |profile_fields| %>
                                    <div class="form-group">
                                        <%= profile_fields.text_field :company_name, autofocus: true, class: "form-control", placeholder: "RazÃ£o Social", autofocus: "autofocus" %>
                                    </div>
                                    <div class="form-group">
                                        <%= profile_fields.text_field :fantasy_name, autofocus: true, class: "form-control", placeholder: "Nome Fantasia", autofocus: "autofocus" %>
                                    </div>
                                    <div class="form-group">
                                        <%= profile_fields.text_field :street, autofocus: true, class: "form-control", placeholder: "Rua", autofocus: "autofocus" %>
                                    </div>
                                    <div class="form-group">
                                        <%= profile_fields.text_field :city, autofocus: true, class: "form-control", placeholder: "Cidade", autofocus: "autofocus" %>
                                    </div>
                                    <div class="form-group">
                                        <%= profile_fields.text_field :cnpj, autofocus: true, class: "form-control", placeholder: "CNPJ", autofocus: "autofocus" %>
                                    </div>
                                    <div class="form-group">
                                        <%= profile_fields.text_field :phone, autofocus: true, class: "form-control", placeholder: "Telefone", autofocus: "autofocus" %>
                                    </div>
                                <% end %>

                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail", type:"email", autofocus: "autofocus" %>
                                </div>
                                <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", type: "password"%>
                                </div>

                                <div class="form-group">
                                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation", type: "password"%>
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <%= f.submit t('site.sign_up_btn'), class: "btn btn-lg btn-success btn-block" %>
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% unless devise_error_messages!.blank? %>
    <% resource.errors.full_messages.each do |message| %>
        <%= javascript_tag "$.notify( {message: '#{message}'},
                                        {type: 'danger', placement: { from: 'top', align: 'center'}});" %>
    <% end %>
<% end %>

