<div class="modal fade" id="CartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Finalizar or√ßamento</h4>
      </div>
      <div class="modal-body">
        <%= form_tag(site_send_mail_consumer_index_path, remote: true) do %>
          <div class="form-group">

          <div class="form-group">
            <label for="profile_consumer-text" class="control-label"><%= t('site.from') %>:</label>
            <%= text_field_tag(:'profile_consumer-text', nil, class:"form-control", readonly: "readonly" ) %>
            <%= text_field_tag(:'sender-text', nil, class:"form-control", readonly: "readonly" ) %>
          </div>

            <label for="message-text" class="control-label"><%= t('site.observation') %>:</label>
            <%= text_area_tag(:'message-text', nil , class: "form-control" ) %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('site.close') %></button>
        <%= submit_tag  t('site.send_cart') ,class: "btn btn-primary" %>
      </div>
        <% end %>
    </div>
  </div>
</div>