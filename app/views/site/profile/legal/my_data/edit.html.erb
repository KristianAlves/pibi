<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
                <h1 class="page-header">Profile Member</h1>
                    <% if @profile_member.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @profile_member.errors.full_messages.each do |message| %>
                                     <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for(@profile_member, url: site_profile_legal_my_datum_path(@profile_member)) do |f| %>

                                    <div class="form-group">

                                        <div class="form-group">
                                          <label>Insert the company_name</label>
                                          <%= f.text_field :company_name, class: "form-control", placeholder: "company_name"%>
                                        </div>

                                        <div class="form-group">
                                         <label>Insert the fantasy_name </label>
                                         <%= f.text_field :fantasy_name, class: "form-control", placeholder: "fantasy_name" %>
                                        </div>

                                        <div class="form-group">
                                         <label>Insert the street </label>
                                          <%= f.text_field :street, class: "form-control", placeholder: "street" %>
                                        </div>

                                        <div class="form-group">
                                         <label>Insert the city </label>
                                          <%= f.text_field :city, class: "form-control", placeholder: "city" %>
                                        </div>

                                        <div class="form-group">
                                         <label>Insert the cnpj </label>
                                          <%= f.text_field :cnpj, class: "form-control", placeholder: "cnpj" %>
                                        </div>

                                        <div class="form-group">
                                         <label>Insert the phone </label>
                                          <%= f.text_field :phone, class: "form-control", placeholder: "phone" %>
                                        </div>

                                    </div>
                                    <br>
                                    <button type="submit" class="btn btn-primary">Submit Button</button>
                                <% end %>
                            </div>
                    </div>
                </div>
        </div>
    </div>
</div>
