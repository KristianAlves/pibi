<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
                <h1 class="page-header"><%= t('site.profile_consumer') %></h1>
                    <% if @profile_consumer.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @profile_consumer.errors.full_messages.each do |message| %>
                                     <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for(@profile_consumer, url: site_profile_physical_my_datum_path(@profile_consumer)) do |f| %>

                                    <div class="form-group">

                                        <div class="form-group">
                                          <label><%= t('site.name') %></label>
                                          <%= f.text_field :name, class: "form-control", placeholder: "name"%>
                                        </div>

                                        <div class="form-group">
                                         <label><%= t('site.cpf') %> </label>
                                         <%= f.text_field :cpf, class: "form-control", placeholder: "CPF", disabled:"disabled" %>
                                        </div>

                                        <div class="form-group">
                                         <label> <%= t('site.phone') %> </label>
                                          <%= f.text_field :phone, class: "form-control", placeholder: "phone" %>
                                        </div>

                                    </div>
                                    <br>
                                    <button type="submit" class="btn btn-primary"><%= t('site.save') %></button>
                                <% end %>
                            </div>
                    </div>
                </div>
        </div>
    </div>
</div>
