<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
                <h1 class="page-header">E-mail</h1>
                    <% if @email.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @email.errors.full_messages.each do |message| %>
                                     <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= action %>
                    </div>
                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for([:backoffice, @email]) do |f| %>
                                    <div class="form-group">
                                        <label>Email Pibi</label>
                                        <%= f.text_field :email_pibi, class: "form-control", placeholder: "Ex. pibi@pibi.com.br"%>
                                    </div>
                                    <div class="form-group">
                                        <label>Email Loja</label>
                                        <%= f.text_field :email_loja, class: "form-control", placeholder: "Ex. loja@loja.com.br"%>
                                    </div>


                                    <button type="submit" class="btn btn-primary"><%= t('backoffice.save') %></button>
                                <% end %>
                            </div>
                    </div>
                </div>
        </div>
    </div>
</div>