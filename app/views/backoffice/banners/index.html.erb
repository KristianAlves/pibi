<h1 class="page-header">Banners</h1>

<div class="panel panel-default">
    <div class="panel-heading">
      Show Banners
      <%= link_to new_backoffice_banner_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead >
                  <tr>
                      <th style="width: 50px">#</th>
                      <th style="width: 250px"> Picture</th>
                      <th>Description</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                  <% @banners.each do |banner| %>
                      <tr>
                      <td><%= banner.id %></td>
                      <td style: align="center"><%= image_tag banner.picture.url(:thumb) %></td>
                      <td><%= banner.title %></td>
                      <th style="width: 90px"> </style>
                          <%= link_to edit_backoffice_banner_path(banner), class: "btn btn-primary btn-circle" do %>
                              <i class="fa fa-edit"></i>
                          <% end %>
                          <%= link_to backoffice_banner_path(banner), method: :delete, class: "btn btn-danger btn-circle",
                           data: {confirm: "Are you sure you want to delete <b>(#{banner.title})</b>?"} do %>
                              <i class="fa fa-trash-o"></i>
                          <% end %>
                      </th>
                      </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
</div>