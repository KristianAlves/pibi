<h1 class="page-header">About</h1>

<div class="panel panel-default">
    <div class="panel-heading">
      Show About
      <%= link_to new_backoffice_about_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead >
                  <tr>
                      <th> Title</th>
                      <th>Description</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                  <% @abouts.each do |about| %>
                      <tr>
                      <td><%= about.title %></td>
                      <td><%= about.description %></td>
                      <th style="width: 90px">
                          <%= link_to edit_backoffice_about_path(about), class: "btn btn-primary btn-circle" do %>
                              <i class="fa fa-edit"></i>
                          <% end %>
                          <%= link_to backoffice_about_path(about), method: :delete, class: "btn btn-danger btn-circle",
                           data: {confirm: "Are you sure you want to delete <b>(#{about.title})</b>?"} do %>
                              <i class="fa fa-trash-o"></i>
                          <% end %>
                      </th>
                      </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
</div>