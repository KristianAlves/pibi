<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
                <h1 class="page-header"><%= t('backoffice.about') %></h1>
                    <% if @about.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @about.errors.full_messages.each do |message| %>
                                     <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= action %>
                    </div>
                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for([:backoffice, @about], html: { multipart: true}) do |f| %>
                                    <div class="form-group">
                                        <label><%= t('backoffice.new_title') %></label>
                                        <%= f.text_field :title, class: "form-control", placeholder: "Ex. Sobre Pibi"%>
                                    </div>
                                    <div class="form-group", style= "height: 320px; width: 600px;">
                                        <label><%= t('backoffice.new_about') %> </label>
                                        <%= f.text_area :description, class: "form-control", rows: 10,
                                                                    data: {provide: 'markdown'} %>
                                    </div>

                                    <button type="submit" class="btn btn-primary"><%= t('backoffice.save') %></button>
                                <% end %>
                            </div>
                    </div>
                </div>
        </div>
    </div>
</div>