<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
                <h1 class="page-header"><%= t('backoffice.logo') %></h1>
                    <% if @logo.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @logo.errors.full_messages.each do |message| %>
                                     <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= action %>
                    </div>
                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for([:backoffice, @logo], html: { multipart: true}) do |f| %>
                                    <div class="form-group">
                                        <label><%= t('backoffice.name_logo') %></label>
                                        <%= f.text_field :title, class: "form-control", placeholder: "Ex. PIBI"%>
                                    </div>

                                    <div class="form-group">
                                        <label><%= t('backoffice.logo_picture') %> </label>
                                        <%= image_tag @logo.picture(:thumb), class: "img-thumbnail" %>
                                        <%= f.file_field :picture, class: "form-control" %>
                                    </div>

                                    <button type="submit" class="btn btn-primary"><%= t('backoffice.save') %></button>
                                <% end %>
                            </div>
                    </div>
                </div>
        </div>
    </div>
</div>