<h1 class="page-header"><%= t('backoffice.brands') %></h1>

<div class="panel panel-default">
    <div class="panel-heading">
      <%= t('backoffice.show_brands') %>
      <%= link_to new_backoffice_brand_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
          <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead >
                  <tr>
                      <th style="width: 50px">#</th>
                      <th style="width: 250px">Logo</th>
                      <th><%= t('backoffice.brand') %></th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                  <% @brands.each do |brand| %>
                      <tr>
                      <td><%= brand.id %></td>
                      <td style: align="center"><%= image_tag brand.picture.url(:thumb) %></td>
                      <td><%= brand.title %></td>
                      <th style="width: 90px"> </style>
                          <%= link_to edit_backoffice_brand_path(brand), class: "btn btn-primary btn-circle" do %>
                              <i class="fa fa-edit"></i>
                          <% end %>
                          <%= link_to backoffice_brand_path(brand), method: :delete, class: "btn btn-danger btn-circle",
                           data: {confirm: "VocÃª tem certeza que deseja excluir <b>(#{brand.title})</b>?"} do %>
                              <i class="fa fa-trash-o"></i>
                          <% end %>
                      </th>
                      </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
</div>