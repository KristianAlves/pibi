<h1 class="page-header">Products</h1>

<div class="panel panel-default">
            <div class="panel-heading">
                Show Products
                <a class="btn btn-success btn-circle pull-right" style="margin-top: -5px" href="/backoffice/products/new">
                    <i class="fa fa-plus"></i>
</a>            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px">#</th>
                                <th>Product</th>
                                <th style="width: 300px">Subcategory</th>
                                <th style="width: 90px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @products.each do |product| %>
                                <tr>
                                    <td><%= product.id %></td>
                                    <td><%= product.title %></td>
                                    <td><%= product.subcategory.title %></td>
                                    <th> </style>
                                        <%= link_to edit_backoffice_product_path(product), class: "btn btn-primary btn-circle" do %>
                                            <i class="fa fa-edit"></i>
                                        <% end %>
                                        <%= link_to backoffice_product_path(product), method: :delete, class: "btn btn-danger btn-circle",
                                                 data: {confirm: "Are you sure you want to delete <b>(#{product.title})</b>?"} do %>
                                            <i class="fa fa-trash-o"></i>
                                        <% end %>
                                    </th>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>