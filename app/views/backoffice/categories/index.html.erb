    <h1 class="page-header"><%= t('backoffice.category') %></h1>

        <div class="panel panel-default">
            <div class="panel-heading">
                <%= t('backoffice.show_category') %>
                <%= link_to new_backoffice_category_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead >
                            <tr>
                                <th style="width: 50px">#</th>
                                <th><%= t('backoffice.category') %></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @categories.each do |category| %>
                                <tr>
                                    <td><%= category.id %></td>
                                    <td><%= category.description %></td>
                                    <th style="width: 90px"> </style>
                                        <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary btn-circle" do %>
                                            <i class="fa fa-edit"></i>
                                        <% end %>
                                        <%= link_to backoffice_category_path(category), method: :delete, class: "btn btn-danger btn-circle",
                                                 data: {confirm: "VocÃª tem certeza que deseja excluir <b>(#{category.description})</b>?"} do %>
                                            <i class="fa fa-trash-o"></i>
                                        <% end %>
                                    </th>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>