<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
                <h1 class="page-header"><%= t('backoffice.subcategory') %></h1>
                    <% if @subcategory.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @subcategory.errors.full_messages.each do |message| %>
                                     <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <%= action %>
                    </div>
                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for([:backoffice, @subcategory]) do |f| %>
                                    <div class="form-group">
                                        <label><%= t('backoffice.insert_new_subcategory') %></label>
                                        <%= f.text_field :title, class: "form-control", placeholder: "Ex. Notebook"%>
                                    </div>

                                    <div class="form-group">
                                        <label><%= t('backoffice.select_category') %></label>
                                        <%= f.collection_select :category_id, Category.all, :id, :description, {}, {class: "form-control"}%>
                                    </div>


                                    <button type="submit" class="btn btn-primary"><%= t('backoffice.save') %></button>
                                <% end %>
                            </div>
                    </div>
                </div>
        </div>
    </div>
</div>