<h1 class="page-header"><%= t('backoffice.member') %></h1>

    <%= form_tag backoffice_survey_path, method: :get do %>
            <div class="form-group input-group">
                <%= text_field_tag(:q, params[:q], { class:"form-control", placeholder:"Pesquisar por..." } ) %>
                <span class="input-group-btn">
                    <%= submit_tag("Pesquisar", class:"btn btn-default") %>
                </span>
            </div>
    <% end %>

<div class="panel panel-default">
  <div class="panel-heading">
      <%= t('backoffice.show_client') %>
  </div>
  <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead>
                  <tr>
                      <th style="width: 50px">#</th>
                      <th><%= t('backoffice.client') %></th>
                  </tr>
              </thead>
              <tbody>
                  <% @members.each do |member| %>
                      <tr>
                          <td><%= member.id %></td>
                          <td><%= member.email %></td>
                      </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
  </div>
</div>


<div class="text-center">
    <%= paginate @members %>
</div>
